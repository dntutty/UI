<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--强调颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--窗口背景色-->
        <item name="android:windowBackground">@color/colorWhite</item>
        <!--&lt;!&ndash;虚拟导航栏颜色&ndash;&gt;-->
        <!--<item name="android:navigationBarColor">@color/colorAccent</item>-->
        <!--&lt;!&ndash;设置menu菜单的背景色&ndash;&gt;-->
        <!--<item name="android:itemBackground">@color/black</item>-->
        <!--&lt;!&ndash;设置菜单的字体颜色&ndash;&gt;-->
        <!--<item name="android:textColorPrimary">@android:color/darker_gray</item>-->
        <!--设置menu窗口不覆盖ToolBar视图-->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 更改标题栏的字体，图标颜色 -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="transparentText">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="ToolBarTitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!--Theme Dialog style-->
    <style name="AppTheme.AppCompat.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:maxWidth">1080dp</item>
    </style>

    <!--ToolBar TextSize style-->
    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>



    <style name="Theme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar"/>
    <!--Toolbar标题的字体和颜色-->
    <style name="Theme.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <!--Toolbar副标题的字体和颜色-->
    <style name="Theme.Toolbar.SubTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:textSize">14sp</item>
        <item name="android:radius">20dp</item>
        <item name="overlapAnchor">false</item>
    </style>
    <!--沉浸式状态栏-->
    <style name="AppTheme.Immersive" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--5.0以下4.4以上的沉浸式状态栏的实现-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->

        <!--<item name="android:windowDrawsSystemBarBackgrounds">false</item>-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>
</resources>
